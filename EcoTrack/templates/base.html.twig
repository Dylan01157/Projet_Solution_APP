{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Barre de Naviagtion{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <style>         
            body {
                display: flex;
                min-height: 100vh;
                margin: 0;
                background-color:rgb(172, 168, 168);
            }

            .logo-img {
                height: 30px;
                width: auto;
                margin-bottom: 1rem;
                display: block;
            }



            .sidebar {
                width: 250px;
                color: white;
                display: flex;
                flex-direction: column;

                padding: 1rem;
                height: 100vh;
                position: fixed;
                top: 0;
                left: 0;
                gap: 2rem;
            }
            .sidebar a {
                color: black;
                text-decoration: none;
                display: block;
                padding: 0.5rem 0;
            }

            .content {
                margin-left: 250px;
                padding: 2rem;
                width: 100%;
            }
            .sidebar {
                width: 250px;
                background-color:rgb(255, 255, 255);
                color: white;
                display: flex;
                flex-direction: column;
                align-items: center;

                height: 100vh;
                position: fixed;

                padding: 2rem 1rem;
            }

            .buton  {
                width: 100%;
                display: flex;
                flex-direction: column;
                gap: 0rem;
            }

            .menu-item {
                background-color:rgb(255, 255, 255);
                color: black;
                text-decoration: none;
                padding: 0.75rem 1rem;
                border: none;
                border-radius: 0px;

                display: block;
                font-size: 1rem;
                border-bottom: 1px solid #e0e0e0;
                transition: background-color 0.2s ease;
            }

            .menu-item:hover {
                background-color:rgb(119, 119, 119);
                cursor: pointer;
            }

            .form-control {

                padding: 0.75rem 1rem;
                gap: 100rem;
            }



        </style>
    </head>
    <body>
        <div class="sidebar">

            <img src="/images/logo.png" alt="Logo EcoTrack" class="logo-img">

            <form class="search-form" action="/recherche" method="get">
                <input class="form-control" type="text" name="q" placeholder="Rechercher...">
            </form>

            <div class="buton">
                <a href="{{ path('app_accueil') }}" class="menu-item"> <i class="bi bi-house-door me-2"></i> Accueil</a>
                <a href="#" class="menu-item text-start"> <i class="bi bi-speedometer2 me-2"></i> Dashboard</a>
                <a href="#" class="menu-item text-start"> <i class="bi bi-ui-checks me-2"></i> Questionnaire </a>
                <a href="#" class="menu-item text-start"> <i class="bi bi-bar-chart-line me-2"> </i> Classement </a>

                <div class="accordion " id="accordionSidebar">
                    <div class="accordion-item bg-transparent border-0 ">
                        <h2 class="accordion-header ">
                            <button class="menu-item w-100 text-start " type="button" data-bs-toggle="collapse" data-bs-target="#collapsePage2" aria-expanded="false" aria-controls="collapsePage2"> 
                            <i class="bi bi-folder me-2"></i> Cat√©gories 
                            </button>
                        </h2>
                        <div id="collapsePage2" class="accordion-collapse collapse">
                            <div class="accordion-body p-0">
                                <a class="dropdown-item menu-item text-start" href="#">Sous-page</a>
                                <a class="dropdown-item menu-item text-start" href="#">Sous-page</a>
                                <a class="dropdown-item menu-item text-start" href="#">Sous-page</a>
                            </div>
                        </div>
                    </div>
                </div>

                <a href="#" class="menu-item text-start"> <i class="bi bi-person-circle me-2"></i> Profil</a>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

        <div class="content">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
