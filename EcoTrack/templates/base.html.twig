{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Barre de Naviagtion{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <style>         
            body {
                display: flex;
                min-height: 100vh;
                margin: 0;
            }
            .sidebar {
                width: 250px;
                background-color: #343a40;
                color: white;
                display: flex;
                flex-direction: column;
                align-items: center;
                padding: 1rem;
                height: 100vh;
                position: fixed;
                top: 0;
                left: 0;
                gap: 2rem;
            }
            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 0.5rem 0;
            }

            .content {
                margin-left: 250px;
                padding: 2rem;
                width: 100%;
            }
            .sidebar {
                width: 250px;
                background-color: #343a40;
                color: white;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: flex-start;
                height: 100vh;
                position: fixed;
                top: 0;
                left: 0;
                padding: 2rem 1rem;
            }

            .buton  {
                width: 100%;
                display: flex;
                flex-direction: column;
                gap: 0rem;
            }

            .menu-item {
                background-color:rgb(138, 137, 137);
                color: white;
                text-decoration: none;
                padding: 0.75rem 1rem;
                border: none;
                border-radius: 0px;
                text-align: center;
                display: block;
                font-size: 1rem;
                border-bottom: 1px solid black; 
                transition: background-color 0.2s ease;
            }

            .accordion-header{
                text
            }
            

            .menu-item:hover {
                background-color:rgb(119, 119, 119);
                cursor: pointer;
            }

            .form-control {
                border-radius: 0px;
                padding: 0.75rem 1rem;
                gap: 100rem;
            }

        </style>
    </head>
    <body>
        <div class="sidebar">
            <h3 class ="Site-title">EcoTrack</h3>
            <form class="search-form" action="/recherche" method="get">
                <input class="form-control" type="text" name="q" placeholder="Rechercher...">
            </form>

            <div class="buton">
                <a href="{{ path('app_accueil') }}" class="menu-item">üè† Accueil</a>
                <a href="#" class="menu-item">üìÑ Page 1</a>
                
                <div class="accordion w-100" id="accordionSidebar">
                    <div class="accordion-item bg-transparent border-0">
                        <h2 class="accordion-header">
                            <button class="menu-item w-100 " type="button" data-bs-toggle="collapse" data-bs-target="#collapsePage2" aria-expanded="false" aria-controls="collapsePage2"> 
                            üìÑ Page 2 
                            </button>
                        </h2>
                        <div id="collapsePage2" class="accordion-collapse collapse">
                            <div class="accordion-body p-0">
                                <a class="dropdown-item menu-item text-center" href="#">Sous-page 1</a>
                                <a class="dropdown-item menu-item text-center" href="#">Sous-page 2</a>
                                <a class="dropdown-item menu-item text-center" href="#">Sous-page 3</a>
                            </div>
                        </div>
                    </div>
                </div>

                <a href="#" class="menu-item">üìÑ Page 3</a>
                <a href="#" class="menu-item">üìÑ Page 4</a>
                <a href="#" class="menu-item">üìÑ Page 5</a>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

        <div class="content">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
