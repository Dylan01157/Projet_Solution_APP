            <!-- Conteneur avec les cercles + ligne -->
            <div class="timeline-container flex-grow-1 me-3 position-relative d-flex justify-content-between align-items-center">
                {% for i in 1..5 %}
                    {% if i == current_day %}
                    <!-- Jour actuel (en jaune) -->
                    <div class="day-circle bg-warning text-white z-1">{{ i }}</div>
                {% elseif i < current_day %}
                    <!-- Jour passé (en vert) -->
                    <div class="day-circle bg-success-subtle text-white z-1">{{ i }}</div>
                {% else %}
                    <!-- Jour à venir (en gris) -->
                    <div class="day-circle bg-secondary text-white z-1">{{ i }}</div>
                {% endif %}
                {% endfor %}
            </div>

